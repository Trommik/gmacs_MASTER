<UserControl x:Class="UI.Desktop.UserControls.MixerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Desktop.UserControls"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="760">

    <TabControl TabStripPlacement="Bottom" Margin="5 0 5 5" controls:TabControlHelper.IsUnderlined="True">
        <TabItem Header="Left Mixer">

            <ContentControl Content="{Binding LeftGeneratorVM}"/>

        </TabItem>

        <TabItem Header="Right Mixer">

            <ContentControl Content="{Binding RightGeneratorVM}"/>

        </TabItem>
    </TabControl>


</UserControl>
